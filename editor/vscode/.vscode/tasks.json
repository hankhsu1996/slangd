{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-extension",
      "type": "npm",
      "script": "compile",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "copy-binary",
      "type": "shell",
      "command": "mkdir -p ./bin && cp -f ../../bazel-bin/slangd ./bin/",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Prepare Extension",
      "dependsOrder": "sequence",
      "dependsOn": ["copy-binary", "build-extension"],
      "problemMatcher": []
    }
  ]
}
