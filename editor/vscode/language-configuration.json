{
  "comments": {
    "lineComment": {
      "comment": "//",
      "noIndent": false
    },
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["'{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "/*", "close": "*/", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "offSide": false
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*\\b(begin|module|class|function|task|case|fork|covergroup|property|sequence|interface|package|program|generate)\\b.*$",
    "decreaseIndentPattern": "^\\s*\\b(end|endmodule|endclass|endfunction|endtask|endcase|join|join_any|join_none|endgroup|endproperty|endsequence|endinterface|endpackage|endprogram|endgenerate)\\b.*$"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
